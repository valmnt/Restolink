{% extends 'base.html.twig' %}


{% block title %}
    {{ parent() }} - Restaurants
{% endblock %}

{% block body %}
    <h1>Restaurant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Description</th>
                <th>IsValide</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for restaurant in restaurants %}
            <tr>
                <td>{{ restaurant.id }}</td>
                <td>{{ restaurant.libelle }}</td>
                <td>{{ restaurant.description }}</td>
                <td>{{ restaurant.isValide ? 'Yes' : 'No' }}</td>
                <td>{{ restaurant.image }}</td>
                <td>
                    <a href="{{ path('admin_restaurant_show', {'id': restaurant.id}) }}">show</a>
                    <a href="{{ path('admin_restaurant_edit', {'id': restaurant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_restaurant_new') }}">Create new</a>
{% endblock %}

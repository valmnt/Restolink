{% extends 'base.html.twig' %}

{% block title %}Mes restaurants{% endblock %}

{% block body %}
{% if user.restaurants is empty %}
<div class="container">
    <div class="jumbotron">
        <h1>Devenez restaurateur !</h1>
        <p class="lead">Toi aussi devient le prochain grand chef cuisinier, en devenant restaurateur ! 🍜</p>
        <a href="{{ path('add_restaurant') }}"><button type="button" class="btn btn-primary">Ajoutes ton premier restaurant</button></a>
  </div>
</div>
{% else %}
<div class="jumbotron">
    <div class="container">
      <h1 class="display-3 text-center">Mes Restaurants</h1>
    </div>
</div>
<div class="container">
  <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th scope="col">Editer</th>
                <th scope="col">Supprimer</th>
                <th scope="col">Commandes</th>
            </tr>
        </thead>
        <tbody>
    {% for restaurant in user.restaurants %}
        <tr>
            <td>{{restaurant.libelle}}</td>
            <td>{{restaurant.description}}</td>
            <td><img style="height: 100px;" src="{{restaurant.image}}"></td>
            <td><a class="" href="{{path('plats_restaurant_restaurateur', {'id': restaurant.id})}}">Editer</a></td>
            <td><a class="" href="{{path('delete_restaurant_restaurateur', {'id': restaurant.id})}}">Supprimer</a></td>
            <td><a href="{{path('valid-command', {'id': restaurant.id})}}">Commandes</a></td>
        </tr>
    {% endfor %}
       </tbody>
    </table>
</div>
{% endif %}
{% endblock %}

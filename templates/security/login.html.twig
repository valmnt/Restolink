{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<style>
.contain_form {
    display: flex;
    justify-contain: center;
    align-items: center;
    width: 100%;
    height: 700px;
}
.container{
    width: 20%
}
@media screen and (max-width: 1100px) {
 .container {
     width: 50%;
 }
}
@media screen and (max-width: 640px) {
 .container {
     width: 100%;
 }
}
</style>

<div class="contain_form">
<div class="container" >
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal" style="text-align: center;">Connexion ðŸ”’</h1>
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus placeholder="exemple@exemple.com">
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-lg btn-primary" type="submit" style="margin-top: 2%; width: 100%;">
            Connexion
        </button>
        <p class="mt-5 mb-3 text-muted" style="text-align: center;">Â© 2019-2020</p>
    </form>
</div>
</div>
{% endblock %}
